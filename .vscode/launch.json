    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build & Debug (Make)",
            "cwd": "${workspaceFolder}",
            "type": "cortex-debug",
            // fixed file path: "${workspaceFolder}/path/to/filename.elf"
            "executable": "${workspaceFolder}/build/Debug/Canards.elf",
            "servertype": "stlink",
            "device": "STM32F446RETx", //MCU used
            "interface": "swd",
            "svdFile": "${config:STM32VSCodeExtension.cubeCLT.path}/STMicroelectronics_CMSIS_SVD/STM32F446.svd",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "preLaunchTask": "Run Make"
        },
    ]
}